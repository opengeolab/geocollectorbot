{
  "name": "geo-collector-bot",
  "version": "1.1.0",
  "description": "Telegram BOT for geodata collection, developed within the Interreg Project INSUBRI.PARKS",
  "license": "MIT",
  "author": "Edoardo Pessina <edoardopessina.priv@gmail.com>",
  "repository": "git@github.com:opengeolab/geocollectorbot.git",
  "bugs": "https://github.com/opengeolab/geocollectorbot/issues",
  "homepage": "https://github.com/opengeolab/geocollectorbot#readme",
  "scripts": {
    "prepare": "husky install",
    "lint": "eslint src --ext .js,.ts,.tsx",
    "lint:fix": "eslint src --ext .js,.ts,.tsx --fix",
    "check-types": "yarn tsc --noEmit",
    "clean": "rimraf ./build",
    "copy-files": "copyfiles -u 1 src/locales/*.yaml build/",
    "make-types": "yarn node ./scripts/make-types.mjs",
    "build": "yarn clean && yarn make-types && tsc -p tsconfig.json && yarn copy-files",
    "start": "node --unhandled-rejections=strict build/index.js",
    "dev": "ts-node --files ./src/index.ts",
    "unit": "jest --passWithNoTests",
    "test": "yarn lint && yarn unit",
    "coverage": "yarn unit --coverage",
    "update-docker-version": "sed -i.bck \"s|version=\\\"[0-9]*\\.[0-9]*\\.[0-9]*.*\\\"|version=\\\"${npm_package_version}\\\"|\" Dockerfile",
    "update-changelog": "node ./scripts/update-changelog.js ${npm_package_version}",
    "version": "npm run update-changelog && npm run update-docker-version && rm -fr Dockerfile.bck && git add CHANGELOG.md Dockerfile"
  },
  "dependencies": {
    "@fastify/static": "^5.0.2",
    "ajv": "^8.12.0",
    "axios": "^1.3.4",
    "env-schema": "^5.2.0",
    "fastify": "^3.20.1",
    "handlebars": "^4.7.7",
    "i18next": "^22.4.10",
    "i18next-fs-backend": "^2.1.1",
    "pg": "^8.9.0",
    "telegraf": "4.10.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.20.2",
    "@mia-platform/eslint-config-mia": "^3.0.0",
    "@types/i18next-fs-backend": "^1.1.2",
    "@types/jest": "^29.4.0",
    "@types/json-schema": "^7.0.11",
    "@types/node": "^18.14.5",
    "@types/pg": "^8.6.6",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.35.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.3",
    "jest": "^29.4.3",
    "json-schema-to-ts": "^2.7.2",
    "json-schema-to-typescript": "^12.0.0",
    "rimraf": "^4.2.0",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "yarn@3.4.1"
}
